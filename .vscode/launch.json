{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Amplifierd: Run Daemon",
      "type": "debugpy",
      "request": "launch",
      "module": "amplifierd",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "AMPLIFIERD_LOG_LEVEL": "debug"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Amplifierd: Run Daemon (Production Mode)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "amplifierd.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8420",
        "--reload"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "AMPLIFIERD_LOG_LEVEL": "info"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Pytest: Run All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["-v", "--tb=short", "--color=yes"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Pytest: Run Current Test File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--tb=short", "--color=yes"],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Pytest: Run with Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--cov=amplifier_library",
        "--cov=amplifierd",
        "--cov-report=term-missing",
        "--cov-report=html",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Attach to Debugger",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "justMyCode": true
    }
  ]
}
